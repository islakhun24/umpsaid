<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#f1f1f1"
    tools:context=".HomeAct">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#f1f1f1">
        <RelativeLayout
            android:id="@+id/notif"
            android:visibility="gone"
            android:background="#E53935"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img"
                android:layout_marginRight="16dp"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_warning_24"
                android:tint="#FFFFFF"/>
            <TextView
                android:id="@+id/pesan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:textStyle="bold"
                android:text="Masa Berlaku anda kurang dari 3 hari lagi. Silahkan perpanjang masa berlaku pasport anda"
                android:layout_toRightOf="@id/img"/>
        </RelativeLayout>
        <androidx.cardview.widget.CardView
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#5E35B1"
            app:cardCornerRadius="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <TextView
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tampil Data"
                android:textSize="16dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textAlignment="center"
                android:gravity="center_horizontal" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:background="#fff"
                    android:orientation="horizontal"
                    android:weightSum="3">
                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/profile"
                        android:clickable="true"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <ImageView
                            android:tint="#1E88E5"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@drawable/ic_baseline_account_circle_24"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Profil"
                            android:textSize="14dp"
                            android:textColor="#000"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout

                        android:id="@+id/mahasiswa"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@drawable/ic_baseline_supervised_user_circle_24"
                            android:tint="#1E88E5" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Mahasiswa"
                            android:textColor="#000"
                            android:textSize="14dp"
                            android:textStyle="bold" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/jurusan"
                        android:clickable="true"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:tint="#5E35B1"
                            android:src="@drawable/ic_baseline_school_24"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Jurusan"
                            android:textSize="14dp"
                            android:textColor="#000"
                            android:textStyle="bold"/>
                    </LinearLayout>
                    <LinearLayout
                        android:clickable="true"
                        android:id="@+id/informasi"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:tint="#F4511E"
                            android:src="@drawable/ic_baseline_rss_feed_24"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Informasi"
                            android:textSize="14dp"
                            android:textColor="#000"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvInput"
            android:visibility="gone"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#00ACC1"
            app:cardCornerRadius="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:padding="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Input Data"
                    android:textSize="16dp"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:gravity="center_horizontal" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:background="#fff"
                    android:orientation="horizontal"
                    android:weightSum="3">
                    <LinearLayout
                        android:id="@+id/inputMahasiswa"
                        android:clickable="true"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <ImageView
                            android:tint="#5E35B1"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@drawable/ic_baseline_person_add_24"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Mahasiswa"
                            android:textSize="14dp"
                            android:textColor="#000"
                            android:textStyle="bold"/>
                    </LinearLayout>
                    <LinearLayout
                        android:clickable="true"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:id="@+id/inputJurusan"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:tint="#FB8C00"
                            android:src="@drawable/ic_baseline_add_24"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Jurusan"
                            android:textSize="14dp"
                            android:textColor="#000"
                            android:textStyle="bold"/>
                    </LinearLayout>
                    <LinearLayout
                        android:clickable="true"
                        android:id="@+id/inputInformasi"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:tint="#00ACC1"
                            android:src="@drawable/ic_baseline_post_add_24"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Informasi"
                            android:textSize="14dp"
                            android:textColor="#000"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#F4511E"
            app:cardCornerRadius="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:padding="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lainya"
                    android:textSize="16dp"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:gravity="center_horizontal" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:background="#fff"
                    android:orientation="horizontal"
                    android:weightSum="3">
                    <LinearLayout
                        android:id="@+id/change_password"
                        android:clickable="true"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <ImageView
                            android:tint="#1E88E5"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@drawable/ic_baseline_account_circle_24"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Ubah Password"
                            android:textSize="14dp"
                            android:textColor="#000"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                        android:clickable="true"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:tint="#FFB300"
                            android:src="@drawable/ic_baseline_help_24"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Bantuan"
                            android:textSize="14dp"
                            android:textColor="#000"
                            android:textStyle="bold"/>
                    </LinearLayout>
                    <LinearLayout
                        android:clickable="true"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:id="@+id/lnSignout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:tint="#E53935"
                            android:src="@drawable/ic_baseline_power_settings_new_24"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Logout"
                            android:textSize="14dp"
                            android:textColor="#000"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>
