<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    tools:context=".DetailMahasiswaAct">
    <LinearLayout
        android:padding="16dp"
        android:background="#f1f1f1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:elevation="2dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Foto Mahasiswa"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textColor="#000"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp">
                    <ImageView

                        android:id="@+id/imgView"
                        android:src="@drawable/img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </RelativeLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:elevation="2dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Info Mahasiswa"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textColor="#000"/>
                <TextView
                    android:layout_marginTop="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nim"/>
                <EditText
                    android:inputType="textPersonName"
                    android:id="@+id/tvNim"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textColor="#000"
                    android:enabled="false"
                    android:background="@drawable/bg_edittext2"/>
                <TextView
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No. ITAS"/>
                <EditText
                    android:inputType="textPersonName"
                    android:id="@+id/tvNoItas"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textColor="#000"
                    android:enabled="false"
                    android:background="@drawable/bg_edittext2"/>
                <TextView
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No. Paspor"/>
                <EditText
                    android:inputType="textPersonName"
                    android:id="@+id/tvNopaspor"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textColor="#000"
                    android:enabled="false"
                    android:background="@drawable/bg_edittext2"/>
                <TextView
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Masa Berlaku"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp">
                    <TextView
                        android:gravity="center_vertical"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:id="@+id/tvMasaBerlaku"
                        android:layout_marginTop="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginRight="16dp"
                        android:layout_alignParentLeft="true"
                        android:textColor="#000"
                        android:enabled="false"
                        android:background="@drawable/bg_edittext2"/>
                       </RelativeLayout>
                <TextView
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama Mahasiswa"/>
                <EditText
                    android:inputType="textPersonName"
                    android:id="@+id/tvNama_mahasiswa"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textColor="#000"
                    android:enabled="false"
                    android:background="@drawable/bg_edittext2"/>
                <TextView
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Keterangan"/>
                <EditText
                    android:inputType="textPersonName"
                    android:id="@+id/tvKeterangan"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textColor="#000"
                    android:enabled="false"
                    android:background="@drawable/bg_edittext2"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginTop="16dp"
            android:elevation="2dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Data Pribadi Mahasiswa"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textColor="#000"/>
                <TextView
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jurusan "/>
                <EditText
                    android:inputType="textPersonName"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:id="@+id/etJurusan"
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textColor="#000"
                    android:enabled="false"
                    android:background="@drawable/bg_edittext2"/>
                <TextView
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tempat Lahir"/>
                <EditText
                    android:inputType="textPersonName"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:id="@+id/etTempat_lahir"
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textColor="#000"
                    android:enabled="false"
                    android:background="@drawable/bg_edittext2"/>
                <TextView
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tanggal Lahir"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp">
                    <TextView
                        android:gravity="center_vertical"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:id="@+id/etTanggal_lahir"
                        android:layout_marginTop="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginRight="16dp"
                        android:layout_alignParentLeft="true"
                        android:textColor="#000"
                        android:enabled="false"
                        android:background="@drawable/bg_edittext2"/>
                        </RelativeLayout>
                <TextView
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Agama"/>
                <EditText
                    android:layout_marginTop="4dp"
                    android:id="@+id/etAgama"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textColor="#000"
                    android:enabled="false"
                    android:background="@drawable/bg_edittext2"/>
                <TextView
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kewarganegaraan"/>
                <EditText
                    android:inputType="textPersonName"
                    android:id="@+id/etKewarganegaraan"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textColor="#000"
                    android:enabled="false"
                    android:background="@drawable/bg_edittext2"/>
                <TextView
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jenis Kelamin"/>
                <EditText
                    android:inputType="textPersonName"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:id="@+id/etJenkel"
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textColor="#000"
                    android:enabled="false"
                    android:background="@drawable/bg_edittext2"/>

                <TextView
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"/>
                <EditText
                    android:inputType="textEmailAddress"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:id="@+id/etEmail"
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textColor="#000"
                    android:enabled="false"
                    android:background="@drawable/bg_edittext2"/>
                <TextView
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Telepon"/>
                <EditText
                    android:inputType="number"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:id="@+id/etTelepon"
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textColor="#000"
                    android:enabled="false"
                    android:background="@drawable/bg_edittext2"/>
                <TextView
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alamat"/>
                <EditText

                    android:inputType="textPersonName"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:id="@+id/etAlamat"
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textColor="#000"
                    android:enabled="false"
                    android:background="@drawable/bg_edittext2"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginTop="16dp"
            android:elevation="2dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Data Riwayat Sekolah"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textColor="#000"/>
                <TextView
                    android:layout_marginTop="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SMA/SMK"/>
                <EditText
                    android:inputType="textPersonName"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:id="@+id/etNamaSekolah"
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textColor="#000"
                    android:enabled="false"
                    android:background="@drawable/bg_edittext2"/>
                <TextView
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lulus Tahun"/>
                <EditText

                    android:inputType="textPersonName"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:id="@+id/etTahunLulus"
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textColor="#000"
                    android:enabled="false"
                    android:background="@drawable/bg_edittext2"/>
                <TextView
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alamat"/>
                <EditText

                    android:inputType="textPersonName"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:id="@+id/etAlamatSekolah"
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textColor="#000"
                    android:enabled="false"
                    android:background="@drawable/bg_edittext2"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginTop="16dp"
            android:elevation="2dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Data Orang Tua"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textColor="#000"/>
                <TextView
                    android:layout_marginTop="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama Ayah/ Ibu"/>
                <EditText

                    android:inputType="textPersonName"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:id="@+id/etNamaOrangTua"
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textColor="#000"
                    android:enabled="false"
                    android:background="@drawable/bg_edittext2"/>
                <TextView
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No. Telepon"/>
                <EditText
                    android:inputType="number"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:id="@+id/etTeleponOrtu"
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textColor="#000"
                    android:enabled="false"
                    android:background="@drawable/bg_edittext2"/>
                <TextView
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alamat"/>
                <EditText

                    android:inputType="textPersonName"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:id="@+id/etAlamatOrtu"
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textColor="#000"
                    android:enabled="false"
                    android:background="@drawable/bg_edittext2"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>